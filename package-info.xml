<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>smftricks:postprefix</id>
	<name>SMF Post Prefix</name>
	<version>3.0</version>
	<type>modification</type>
	<install for="2.1 - 2.1.99, 2.1 Beta 1 - 3">

		<!-- Mod Readme -->
		<readme lang="english" parsebbc="true" type="file">readme.txt</readme>
		<!-- Credits -->
		<credits url="https://smftricks.com" license="MPL 2.0" copyright="SMF Tricks" licenseurl="https://www.mozilla.org/en-US/MPL/2.0/">SMF Post Prefix</credits>
		<!-- License -->
		<license type="inline" parsebbc="false">
			This Source Code Form is subject to the terms of the Mozilla Public
			License, v. 2.0. If a copy of the MPL was not distributed with this
			file, You can obtain one at https://www.mozilla.org/en-US/MPL/2.0/.
		</license>
		<!-- PostPrefix Files -->
		<require-dir name="Sources" destination="$boarddir">Source files</require-dir>
		<!-- Templates and Languages -->
		<require-dir name="Themes" destination="$boarddir">Theme files</require-dir>
		<!-- Hooks -->
		<hook hook="integrate_pre_include" function="$sourcedir/Subs-PostPrefix.php" />
		<hook hook="integrate_pre_load" function="PostPrefix::initialize" file="$sourcedir/Subs-PostPrefix.php" />
		<!-- Database -->
		<database>install.php</database>
		<!-- Redirect -->
		<redirect url="?action=admin;area=postprefix">redirect.txt</redirect>
	</install>
	
	<uninstall for="2.1 - 2.1.99, 2.1 Beta 1 - 3">

		<!-- Source Files -->
		<remove-file name="$sourcedir/PostPrefixAdmin.php">Source admin</remove-file>
		<remove-file name="$sourcedir/Subs-PostPrefix.php">Source Post Prefix</remove-file>
		<!-- Languages -->
		<remove-file name="$languagedir/PostPrefix.english.php">Language file</remove-file>
		<!-- Scripts -->
		<remove-file name="$themedir/scripts/colpick.js">Colpick</remove-file>
		<!-- Styles -->
		<remove-file name="$themedir/css/colpick.css">Colpick</remove-file>
		<!-- Templates -->
		<remove-file name="$themedir/PostPrefix.template.php">Admin template</remove-file>
		<!-- Hooks -->
		<hook hook="integrate_pre_include" function="$sourcedir/Subs-PostPrefix.php" reverse="true" />
		<hook hook="integrate_pre_load" function="PostPrefix::initialize" file="$sourcedir/Subs-PostPrefix.php" reverse="true" />
		<!-- Database -->
		<database>install.php</database>
	</uninstall>
</package-info>